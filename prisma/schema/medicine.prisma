model Medicine {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  stock       Int

  sellerId   String
  seller     User     @relation("SellerMedicines", fields: [sellerId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  reviews    Review[]

  createdAt  DateTime @default(now())
}
